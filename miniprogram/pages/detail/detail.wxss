/* pages/detail/detail.wxss */

.container {
  padding: 24rpx;
  min-height: 100vh;
  background-color: #f8fafc;
}

/* 英雄头部信息 */
.hero-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 32rpx;
  background: #fff;
  border-radius: 16rpx;
  border: 2rpx solid #e2e8f0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
}

.hero-avatar-xl {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  border: 3rpx solid #e2e8f0;
}

.hero-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.hero-name-xl {
  font-size: 40rpx;
  font-weight: 900;
  font-style: italic;
  color: #1e293b;
  letter-spacing: -1rpx;
}

.hero-id {
  font-size: 24rpx;
  color: #94a3b8;
  font-family: monospace;
}

/* 风险提示 */
.risk-section {
  background: #fef2f2;
  border: 2rpx solid #fecaca;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.risk-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.risk-icon {
  font-size: 32rpx;
}

.risk-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #dc2626;
}

.risk-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.risk-desc {
  font-size: 24rpx;
  color: #991b1b;
}

.risk-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.risk-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: #fff;
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  border: 2rpx solid #fecaca;
}

.risk-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 8rpx;
}

.risk-name {
  font-size: 24rpx;
  font-weight: 700;
  color: #dc2626;
}

/* 克制详情部分 */
.matches-section {
  background: #fff;
  border-radius: 16rpx;
  border: 2rpx solid #e2e8f0;
  overflow: hidden;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx;
  border-bottom: 2rpx solid #e2e8f0;
  background: #f8fafc;
  font-size: 28rpx;
  font-weight: 700;
  color: #334155;
}

.section-icon {
  font-size: 28rpx;
}

.matches-list {
  padding: 16rpx;
}

.match-card {
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.match-card:last-child {
  margin-bottom: 0;
}

.match-header {
  padding: 16rpx 20rpx;
  background: #fff;
  border-bottom: 2rpx solid #e2e8f0;
}

.target-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.target-avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 8rpx;
  border: 2rpx solid #e2e8f0;
}

.target-text {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.target-label {
  font-size: 20rpx;
  color: #94a3b8;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.target-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #1e293b;
}

.match-reason {
  padding: 20rpx;
  border-left: 4rpx solid #e2e8f0;
  margin-left: 8rpx;
}

.reason-text {
  font-size: 26rpx;
  line-height: 1.8;
  color: #475569;
}

